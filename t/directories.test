#
# Test making files in directories that don't exist yet.
#

.PHONY: all

perl_begin
  # Make sure that '/' gets parsed properly (not as ''!)
  use Mpp::File;
  die unless file_info('/') == file_info('/.');
perl_end

all: a b c

%: subdir/%
	&echo $@ -o $@
	&cat $< -o>>$@

subdir/$( a b c): subdir
	&echo $@ -o $@

subdir:
	&mkdir $@

subdir2/Makeppfile:
	&mkdir $(dir $@)
	&touch $@

load_makefile subdir2/Makeppfile
