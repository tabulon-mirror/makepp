package mod;

require Exporter;
@ISA = qw(Exporter);

@EXPORT_OK = qw(c_cmd);

sub c_cmd {
  open my $fh, '>', $_[0] or
    die $!;
  print $fh "$_[0]: " . join( ' ', map $Mpp::Subs::rule->{MAKEFILE}->expand_variable( $_ ), qw(LD MYVAR) );
